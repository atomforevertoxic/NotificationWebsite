@page
@model NotificationWebsite.Models.User;
@{
    ViewData["Title"] = "Notification Subscribe";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h3>Notification Subscribing</h3>
    </div>
    <form method="post" asp-controller="Users" asp-action="CreateUser" class="w-50 mx-auto">
        
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4 mb-1"></div>

        <div class="form-group mb-2">
            <label asp-for="Name" class="control-label fw-bold mb-1"></label>
            <input asp-for="Name" class="form-control mb-1" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Email" class="control-label fw-bold mb-1"></label>
            <input asp-for="Email" class="form-control mb-1" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Age" class="control-label fw-bold mb-1"></label>
            <input asp-for="Age" class="form-control mb-1" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        @if (TempData["SuccessSubscribing"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessSubscribing"]
            </div>
        }

        <div class="form-group">
            <input type="submit" value="Subscribe" class="btn btn-primary btn-block" /> 
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}